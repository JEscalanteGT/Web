.Evento
	background-color: color-dark-cyan
	padding: 10px
	.Evento-content
		color: color-white
		font-size: 0.875rem
		padding-left: 10px
		
		a
			color: color-white
			font-weight: bold
			text-decoration: none
			&:hover
				text-decoration: underline

		p
			margin: 0
			padding: 0
			font-weight: light

	.Evento-logo
		font-size: 0px
		
		a
			img
				border-radius: 50%

	.Evento-content, .Evento-logo
		display: inline-block
		vertical-align: top